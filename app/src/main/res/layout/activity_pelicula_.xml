<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".Pelicula_Activity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:layout_margin="@dimen/padding_small"
                    >
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/ic_title"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_title"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_title"
                                android:layout_alignBottom="@id/ic_title"
                                android:text="Title"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />

                            <ImageView
                                android:id="@+id/ic_year"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@id/ic_title"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_year"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_year"
                                android:layout_alignBottom="@id/ic_year"
                                android:text="Year"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />
                            <ImageView
                                android:id="@+id/ic_rate"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@+id/dt_year"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_rate"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_rate"
                                android:layout_alignBottom="@id/ic_rate"
                                android:text="Rate"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />

                            <ImageView
                                android:id="@+id/ic_director"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@id/ic_rate"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_director"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_director"
                                android:layout_alignBottom="@id/ic_director"
                                android:text="Director"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />
                            <ImageView
                                android:id="@+id/ic_released"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@id/ic_director"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_released"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_released"
                                android:layout_alignBottom="@id/ic_released"
                                android:text="Released"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/segundamitad"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ic_actor"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_actor"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_actor"
                                android:layout_alignBottom="@id/ic_actor"
                                android:text="Actor"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />

                            <ImageView
                                android:id="@+id/ic_escritor"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@id/ic_actor"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_escritor"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_escritor"
                                android:layout_alignBottom="@id/ic_escritor"
                                android:text="escritor"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />
                            <ImageView
                                android:id="@+id/ic_genero"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@+id/dt_escritor"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_genero"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_genero"
                                android:layout_alignBottom="@id/ic_genero"
                                android:text="Genero"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />

                            <ImageView
                                android:id="@+id/ic_premios"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@id/ic_genero"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_premios"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_premios"
                                android:layout_alignBottom="@id/ic_premios"
                                android:text="premios"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />
                            <ImageView
                                android:id="@+id/ic_duracion"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@id/ic_premios"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_duracion"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_duracion"
                                android:layout_alignBottom="@id/ic_duracion"
                                android:text="Duracion"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />

                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/padding_small"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_marginBottom="@dimen/padding_small"
                    >

                    <TextView
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:id="@+id/dt_plot"
                        android:padding="@dimen/padding_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="plot"
                        />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
                app:contentScrim="@color/primary"
                >

                <ImageView
                    android:id="@+id/dt_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                    />
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/abc_action_bar_default_height_material"
                    app:layout_collapseMode="pin"
                    />



            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <!--<android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="@dimen/padding_small"
            app:layout_anchor="@id/appBarLayout"
            app:layout_anchorGravity="right|bottom"
            app:layout_scrollFlags="scroll|enterAlways"
            />-->



    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>