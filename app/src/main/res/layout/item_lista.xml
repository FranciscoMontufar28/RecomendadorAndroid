<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/nombrePelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="?android:selectableItemBackground"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imagenPelicula"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/nombrePelicula"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tagsPelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagenPelicula"
        android:layout_centerInParent="true"
        android:background="?android:selectableItemBackground"/>
    <TextView
        android:id="@+id/recomendacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tagsPelicula"
        android:layout_centerInParent="true"
        android:background="?android:selectableItemBackground"/>

</RelativeLayout>