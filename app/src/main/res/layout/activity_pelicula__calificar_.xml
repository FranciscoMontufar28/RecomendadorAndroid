<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francisco.recomendador.Pelicula_Calificar_Activity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:layout_margin="@dimen/padding_small"
                    >
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/ic_title_calificar"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_title_calificar"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_title_calificar"
                                android:layout_alignBottom="@id/ic_title_calificar"
                                android:text="Title"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />

                            <ImageView
                                android:id="@+id/ic_year_calificar"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@id/ic_title_calificar"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_year_calificar"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_year_calificar"
                                android:layout_alignBottom="@id/ic_year_calificar"
                                android:text="Year"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />
                            <ImageView
                                android:id="@+id/ic_rate_calificar"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@+id/dt_year_calificar"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_rate_calificar"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_rate_calificar"
                                android:layout_alignBottom="@id/ic_rate_calificar"
                                android:text="Rate"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />

                            <ImageView
                                android:id="@+id/ic_director_calificar"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@id/ic_rate_calificar"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_director_calificar"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_director_calificar"
                                android:layout_alignBottom="@id/ic_director_calificar"
                                android:text="Director"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />
                            <ImageView
                                android:id="@+id/ic_released_calificar"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@id/ic_director_calificar"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_released_calificar"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_released_calificar"
                                android:layout_alignBottom="@id/ic_released_calificar"
                                android:text="Released"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/segundamitad_calificar"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/ic_actor_calificar"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_actor_calificar"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_actor_calificar"
                                android:layout_alignBottom="@id/ic_actor_calificar"
                                android:text="Actor"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />

                            <ImageView
                                android:id="@+id/ic_escritor_calificar"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@id/ic_actor_calificar"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_escritor_calificar"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_escritor_calificar"
                                android:layout_alignBottom="@id/ic_escritor_calificar"
                                android:text="escritor"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />
                            <ImageView
                                android:id="@+id/ic_genero_calificar"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@+id/dt_escritor_calificar"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_genero_calificar"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_genero_calificar"
                                android:layout_alignBottom="@id/ic_genero_calificar"
                                android:text="Genero"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />

                            <ImageView
                                android:id="@+id/ic_premios_calificar"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@id/ic_genero_calificar"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_premios_calificar"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_premios_calificar"
                                android:layout_alignBottom="@id/ic_premios_calificar"
                                android:text="premios"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />
                            <ImageView
                                android:id="@+id/ic_duracion_calificar"
                                android:layout_width="@dimen/template_icon"
                                android:layout_height="@dimen/template_icon"
                                android:src="@mipmap/ic_launcher"
                                android:layout_below="@id/ic_premios_calificar"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                android:layout_marginLeft="@dimen/padding_xsmall"
                                />

                            <TextView
                                android:id="@+id/dt_duracion_calificar"
                                style="@style/Base.TextAppearance.AppCompat.Body1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/ic_duracion_calificar"
                                android:layout_alignBottom="@id/ic_duracion_calificar"
                                android:text="Duracion"
                                android:layout_marginBottom="@dimen/padding_xsmall"
                                />

                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/padding_small"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_marginBottom="@dimen/padding_small"
                    >

                    <TextView
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:id="@+id/dt_plot_calificar"
                        android:padding="@dimen/padding_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="plot"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/padding_small"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_marginBottom="@dimen/padding_small"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                                <EditText
                                    style="@style/TextAppearance.AppCompat.Body1"
                                    android:id="@+id/IdUsuarioCalificar"
                                    android:padding="@dimen/padding_small"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Id usuario"
                                    />
                                <EditText
                                    android:layout_weight="1"
                                    style="@style/TextAppearance.AppCompat.Body1"
                                    android:id="@+id/CalificacionUsuario"
                                    android:padding="@dimen/padding_small"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Calificacion Pelicula"
                                    android:layout_toRightOf="@+id/UsuarioCalificar"
                                    />
                        </LinearLayout>
                        <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/BtnCalificacionUsuario"
                        android:text="Calificar Pelicula"
                        android:background="#CDDC39"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout_calificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar_calificar"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
                app:contentScrim="@color/primary"
                >

                <ImageView
                    android:id="@+id/dt_img_calificar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                    />
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_calificar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/abc_action_bar_default_height_material"
                    app:layout_collapseMode="pin"
                    />



            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
